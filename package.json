{
    "name": "@canopycanopycanopy/b-ber",
    "version": "0.1.7",
    "private": true,
    "license": "GPL-3.0-or-later",
    "engines": {
        "node": ">= 6.x <= 10.x",
        "npm": ">= 5.x <= 6.x"
    },
    "scripts": {
        "watch": "lerna run watch --no-sort --stream --concurrency 999",
        "build": "lerna run build --stream",
        "check:code": "echo \"Checking code...\" && eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .js,.jsx .",
        "check:other": "npm run prettier -- --check",
        "check": "npm-run-all -s check:code check:other",
        "format:code": "npm run check:code -- --fix",
        "format:other": "npm run prettier -- --write",
        "format": "npm-run-all -p format:code format:other",
        "prettier": "prettier \"**/*.{md,scss,yaml,yml}\"",
        "jest": "jest",
        "test:coverage": "rimraf ./coverage && jest --collectCoverage=true",
        "test": "npm-run-all -s check jest",
        "preversion": "node scripts/version.js",
        "publish:canary": "lerna publish --canary --force-publish=*",
        "publish:patch": "lerna publish patch --force-publish=*",
        "outdated": "npm outdated || true && lerna exec --no-bail -- npm outdated",
        "deps:update": "lernaupdate",
        "deps:clean": "rimraf ./package-lock.json ./node_modules && npm i && lerna exec -- rm -rf ./package-lock.json ./node_modules && lerna exec -- npm i",
        "deps:dedupe": "lernaupdate --dedupe"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --ignore-path .gitignore --ignore-path .prettierignore --fix",
            "git add"
        ],
        "*.{md,scss,yaml,yml}": [
            "prettier --write",
            "git add"
        ],
        "*.svg": [
            "svgo --pretty --indent=2 --config=svgo.yml --multipass",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.5.0",
        "@babel/core": "^7.5.4",
        "@babel/plugin-proposal-class-properties": "^7.5.0",
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-proposal-function-bind": "^7.2.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
        "@babel/plugin-transform-runtime": "^7.5.0",
        "@babel/polyfill": "^7.4.4",
        "@babel/preset-env": "^7.5.4",
        "@babel/preset-es2015": "^7.0.0-beta.53",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-stage-0": "^7.0.0",
        "@babel/register": "^7.4.4",
        "ajv": "^6.4.0",
        "babel-eslint": "^8.2.2",
        "babel-jest": "^24.8.0",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "core-js": "^3.1.4",
        "coveralls": "^3.0.1",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-plugin-babel": "^4.1.2",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-prettier": "^3.0.0",
        "eslint-plugin-react": "^7.7.0",
        "fs-extra": "^8.1.0",
        "husky": "^1.1.3",
        "istanbul": "^0.4.5",
        "istanbul-api": "1.2.2",
        "istanbul-reports": "1.1.4",
        "jest": "^24.8.0",
        "jest-environment-jsdom": "^23.1.0",
        "jest-environment-jsdom-global": "^1.1.0",
        "jest-extended": "^0.7.1",
        "lerna": "^3.15.0",
        "lerna-update-wizard": "^0.11.1",
        "lint-staged": "^9.2.0",
        "minami": "^1.2.3",
        "mocha": "^3.2.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.15.1",
        "resolve-cwd": "^2.0.0",
        "rimraf": "^2.6.3",
        "sass-lint": "^1.12.1",
        "semver": "^6.1.1",
        "svgo": "^1.3.0"
    }
}
